<div class="flex flex-col items-center justify-center w-full min-h-screen px-2">
  <div class="mb-20 flex flex-col">
    <span class="font-bold text-4xl text-blue-400"> Thananton 
    </span>
    <span class="font-bold text-4xl text-blue-400"> Pojanwongpanit
    </span>
  </div>
  <div class="w-full max-w-xl">
    <%= form_with model: @quest, url: quests_path, method: :post, local: true, html: { multipart: true } do |form| %>
      <%= form.label :name, class: "relative font-semibold text-lg md:text-lg lg:text-xl text-black" do %>
        Quest</span>
    <% end %>
    <%= form.text_field :name, required: true, placeholder: "Type here", class: "input w-full border-gray-300 rounded-md shadow-none focus:outline-none focus:border-b-1 focus:border-primary transition duration-300 text-lg mt-4" %>
    <div class="flex flex-col md:flex-row justify-end gap-4 py-4 mt-10">
      <%= form.submit class: "btn w-full md:w-[130px] lg:w-[160px] lg:h-[50px] bg-[#3749C0] text-white hover:bg-secondary rounded-[7px] lg:text-lg" %>
    </div>
  <% end %>
</div>
<div class="w-full max-w-xl">
  <% @quests.each do |item| %>
    <div class="flex flex-row xs:flex-row xs:items-center gap-4 p-3 mb-2 last:mb-0 hover:bg-gray-50 transition-colors duration-150 border border-gray-300 rounded-md shadow-lg bg-white w-full ">
      <%= form_with url: toggle_status_quest_path(item), method: :patch, local: true do %>
        <%= check_box_tag 'status', '1', item.status, onchange: 'this.form.submit()' %>
      <% end %>
      <span class="<%= 'line-through text-gray-400' if item.status %> transition-all duration-200 flex-grow">
        <%= item.name %>
      </span>
      <%= button_to "Delete", quest_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm xs:ml-4 mt-2 xs:mt-0  xs:w-auto" %>
    </div>
  <% end %>
</div>
</div>